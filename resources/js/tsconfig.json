{
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,

    "incremental": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
