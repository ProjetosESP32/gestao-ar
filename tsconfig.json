{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "resources", "public"],
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "importHelpers": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@eidellev/inertia-adonisjs",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/attachment-lite",
      "@adonisjs/mail",
      "@adonisjs/bouncer",
      "@adonisjs/ally",
      "@adonisjs/redis",
      "@adonisjs/limiter"
    ]
  }
}
